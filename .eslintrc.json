{
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:jest/recommended"
    ],
    "rules": {
      "import/no-unresolved": "off",
      "react/jsx-filename-extension": "warn",
      "react/jsx-props-no-spreading": "off",
      "react-hooks/exhaustive-deps": "warn",
      "react-hooks/rules-of-hooks": "error"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 7,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "babel",
      "react",
      "react-hooks",
      "jest"
    ],
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    }
  }
